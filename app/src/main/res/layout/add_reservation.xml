<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ajouter Réservation"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dayPicker"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="Jour"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/timePicker"
        android:layout_width="116dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="Arrivé"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/dayPicker"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/endTimePicker"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="Départ"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/timePicker"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:text="TextView TextView TextView TextView TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayPicker" />

    <ProgressBar
        android:id="@+id/parkingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:indeterminateTint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="315dp"
        android:layout_height="306dp"
        android:layout_marginStart="24dp"
        android:columnCount="2"
        android:rowCount="2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/park1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Parking -
                1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/park2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Parking -
                2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/park3"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"

            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Parking -
                3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/park4"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Parking -
                4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>
    </GridLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/priceCard"
        android:layout_width="358dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:strokeColor="@color/orange"
        app:strokeWidth="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="215dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Le prix de votre reservation sera: "
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/payButton"
                android:layout_width="110dp"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/orange"
                android:text="payer"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/price"
                android:layout_width="90dp"
                android:layout_height="62dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:text="10 DH"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/priceProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="19dp"
                android:indeterminateTint="@color/orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>